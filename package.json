{
  "name": "node-auth",
  "version": "1.0.0",
  "description": "trying various ways of authentication in nodejs",
  "scripts": {
    "build": "rimraf dist && tsc",
    "clean": "rimraf dist",
    "serve": "cross-env NODE_ENV=development concurrently \" tsc --watch\" \" nodemon -q dist/app.js\" ",
    "start": "cross NODE_ENV=production node dist/app.js",
    "test": "cross NODE_ENV=testing echo \"Error: no test specified\" && exit 1",
    "db-migrate:dev": "prisma migrate dev"
  },
  "author": "Micheal Naita <hello@michealnaita.com>",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.3",
    "express-handlebars": "^6.0.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "nodemon": "^2.0.15",
    "prisma": "^3.11.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  }
}
